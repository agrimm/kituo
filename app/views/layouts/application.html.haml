%html{html_attrs}
  %head
    %title= t(:title)
    = stylesheet_link_tag 'reset', 'screen', :cache => true

  %body
    - if Rails.env.staging?
      #staging
        .centered= t(:staging, :link => link_to('kituo.amani', 'http://kituo.amani'))

    - if flash.any?
      #flash
        - flash.each do |key, message|
          %div{:class => key}
            .centered
              =message

    #header
      .centered
        #title= link_to t(:title), root_path

        %ul#locales
          - other_locales.each do |locale, locale_name|
            %li= link_to image_tag("#{locale}.png", :alt => locale_name, :title => locale_name), params.merge(:locale => locale), :method => (request.get? ? nil : request.method)

        %ul#navigation
          - pending_count = Child.pending.count
          %li= link_to_with_current t('children.pending.tab').concat(pending_count.zero? ? '' : content_tag(:span, pending_count, :class => 'badge')), pending_children_path
          %li= link_to_with_current t('children.onsite.tab'), onsite_children_path
          %li= link_to_with_current t('children.boarding_offsite.tab'), boarding_offsite_children_path
          %li= link_to_with_current t('children.reunified.tab'), reunified_children_path
          %li= link_to_with_current t('children.terminated.tab'), terminated_children_path
          %li= link_to_with_current t('children.dropped_out.tab'), dropped_out_children_path

    #main
      .centered
        = yield
