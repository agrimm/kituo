= render :partial => 'children/header', :locals => { :child => @child }

%h2= t('children.edit.title')

- form_for @child do |form|
  .field
    = form.label :name
    = form.text_field :name, :autocomplete => 'off'
    = form.error_message_on :name
  .submit
    = form.submit t('children.edit.submit')
