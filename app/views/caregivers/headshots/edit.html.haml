%h1= link_to @caregiver.name, @caregiver

= image_tag @caregiver.headshot.url, :class => 'headshot'

%h2= t('caregivers.headshot.edit.title')

- form_for @caregiver, :url => caregiver_headshot_path(@caregiver), :html => { :multipart => true } do |form|
  = form.error_messages

  .field
    = form.label :headshot
    = form.file_field :headshot

  .submit
    = form.submit t('caregivers.headshot.edit.submit')