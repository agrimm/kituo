- form_for(@caregiver, :html => { :multipart => true }) do |form|
  = form.error_messages(:header_message => t(:header, :count => @caregiver.errors.count, :model => @caregiver.class.human_name, :scope => scope_for_noun(@caregiver, [:activerecord, :errors, :template])))
  %ul
    %li
      = form.label :name
      = form.text_field :name, :autocomplete => 'off'
    %li
      = form.label :role
      = form.select :role, Caregiver.all_roles.map {|role| [t(role, :scope => 'role'), role]}
    %li
      = form.label :headshot
      = form.file_field :headshot
    %li
      = form.submit(t("form.save"))