%h1= t('tasks.upcoming_home_visits.title')

%table.todo_list
  - @children.each do |child|
    %tr
      %td= link_to child.name, new_child_home_visit_path(child)
      %td.detail= link_to_unless child.social_worker.nil?, child.social_worker_name, child.social_worker
      = due_date_td 2.weeks.since(child.arrivals.first.happened_on)
