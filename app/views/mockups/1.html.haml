- content_for(:js) do
  = javascript_include_tag('jquery-1.3.2')
  = javascript_include_tag('jquery-ui-1.7.2.everything.min')
  = javascript_include_tag('visits-sorting')
%h1
  Welcome, Xavier!
  %span.header_link
    (
    = link_to('Switch users', :action => 'index')
    )

.visits
  .scheduled
    %h2 Scheduled Visits
    %h3 This Week
    %h4 Wednesday
    %ul
    %h4 Thursday
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 3)
    %h4 Friday
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 2, :offset => 4)

    %h3 Next Week
    %h4 Wednesday
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 2, :offset => 7)
    %h4 Thursday
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 1, :offset => 9)
    %h4 Friday
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 1, :offset => 10)

  .recommended
    %h2 Recommended Visits
    %h3 Not seen recently
    %ul
      = render :partial => 'child', :collection => Child.find(:all, :limit => 4, :offset => 30)

.tasks
  %h2 Tasks
  %ul
    %li= link_to('Print the roll call form for today', onsite_children_path(:format => :pdf))
    %li= link_to('Enter a new child', new_child_path)
    %li= link_to('View statistics', statistics_path)
