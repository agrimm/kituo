- content_for(:js) do
  = javascript_include_tag('jquery-1.3.2')
  = javascript_include_tag('jquery-ui-1.7.2.everything.min')
  = javascript_include_tag('child-edit')
- content_for(:css) do
  = stylesheet_link_tag('jquery-ui-1.7.2.custom')

- @child = Child.first

.child-header
  .headshot= image_tag(@child.headshot.url)
  .edit
    .editable= link_to('Edit')
    .buttons
      = submit_tag("Save", :class => 'save')
      = link_to("Cancel", '', :class => 'cancel')
  .text
    - form_for(@child, :html => { :multipart => true , :id => 'child-form'}) do |f|
      %h1
        %span.editable
          =h @child.name
        = f.text_field :name
        %span.header_link
          (
          = link_to('Back to my page', :action => '1')
          )

      .meta
        Arrived, from
        %span.editable
          =h @child.location
        = f.text_field :location
        %br
        %span.editable
          =h @child.social_worker_name || "No social worker"
        = f.select :social_worker_id, Caregiver.all.collect {|x| [x.name, x.id] }, :include_blank => 'No social worker'
        %br
        %br
        = f.label :headshot
        = f.file_field :headshot

    .child-visits
      %h2 Case History
      %ul
        %li.event
          Arrived at Amani on 13 Jul 2009
        %li
          .date 20 Aug 2009
          .notes Heatlhy
        %li
          .date 27 Aug 2009
          .notes Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
        %li.event
          Reunified on 28 Aug 2009
        %li
          .date 2 Sep 2009
          .notes Still in school
        %li.scheduled
          .date 
            %span.editable 15 Sep 2009
            - form_for(HomeVisit.new, :url => '/') do |f|
              = f.text_field :happened_on, :class => 'date-field existing', :readonly => true
          .notes
            Scheduled home visit
            (
            = link_to('Change', '', :class => 'change')
            |
            = link_to('Unschedule')
            )
        %li.scheduled
          .date 
            %span.editable
            - form_for(HomeVisit.new, :url => {:action => 2}, :html => {:method => :get}) do |f|
              = f.text_field :happened_on, :class => 'date-field new', :readonly => true
          .notes
            = link_to("Schedule home visit...", '', :class => 'change')
